
<section id="tables">
  <div class="page-header">
    <h1>Missions</h1>
  </div>
  <a class="btn" href="<%= new_admin_mission_path %>">New Mission</a>
  <br/><br/>
  
  <table class="table table-bordered table-striped table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Launch Date</th>
        <th>Active</th>     
        <th>Actions</th>   
      </tr>
    </thead>
    <tbody>
    	<% for mission in @missions %>
	      <tr>
	        <td><%= mission.name %></td>
	        <td><%= mission.launch_date.strftime('%m/%d/%Y') %></td>	        
	        <td><%= mission.active %></td>
	        <td>
	        	<%= link_to 'edit', edit_admin_mission_url(mission) %> |
	        	<%= link_to 'remove', admin_mission_url(mission), :confirm => 'Are you sure you want to remove this mission?', :method => :delete %>
	        </td>
	      </tr>
      <% end %>
    </tbody>
  </table>
</section>